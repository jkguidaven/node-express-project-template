{
  "name": "nodeexpress-project-template",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:**",
    "build": "webpack",
    "dev:build": "NODE_ENV=development webpack",
    "dev:run": "export DEBUG=* && nodemon './dist/app.js' --watch 'dist'",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts --fix",
    "test": "npm-run-all test:**",
    "test:unit": "nyc --reporter=html --reporter=text ts-mocha 'src/test/unit/**/*.unit.ts'",
    "test:integration": "nyc --reporter=html --reporter=text ts-mocha 'src/test/integration/**/*.integration.ts'"
  },
  "author": "James Kenneth A. Guidaven",
  "license": "MIT",
  "dependencies": {
    "@types/mustache-express": "^1.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.1",
    "express-winston": "^4.1.0",
    "handlebars": "^4.7.7",
    "inversify": "^5.0.5",
    "inversify-express-utils": "^6.3.2",
    "joi": "^17.4.0",
    "pug": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-http": "^4.2.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.11",
    "@types/express-handlebars": "^3.1.0",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.35",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "copy-webpack-plugin": "^8.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.18",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.2.3",
    "webpack": "^5.26.3",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  }
}
