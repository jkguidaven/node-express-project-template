{
  "name": "nodeexpress-project-template",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && node ./dist/app.js",
    "debug": "export DEBUG=* && npm run start",
    "build": "gulp copy-assets && tsc",
    "copy:assets": "gulp copy-assets",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts --fix",
    "test": "npm-run-all test:**",
    "test:unit": "ts-mocha 'src/test/unit/**/*.unit.ts'",
    "test:integration": "ts-mocha 'src/test/integration/**/*.integration.ts'"
  },
  "author": "James Kenneth A. Guidaven",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "inversify": "^5.0.5",
    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/chai-http": "^4.2.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.1",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gulp": "^4.0.2",
    "husky": "^5.1.3",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  }
}
